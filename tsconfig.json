{
    "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
        "es2015"
    ],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
        "api/*": [
            "src/api/*"
        ],
        "actions/*": [
            "src/redux/actions/*"
        ],
        "reducers": [
            "src/redux"
        ],
        "containers/*": [
            "src/containers/*"
        ],
        "components": [
            "src/components"
        ],
        "lib/*": [
            "src/lib/*"
        ]
    },
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": false,
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx", "src/api/middleware.js", "src/api/utils.ts"
    ]
}
